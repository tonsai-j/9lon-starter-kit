{
  "entrypoint": "index.html",
  "shell": "src/my-app.js",
  "sources": ["images/**/*", "style/**/*"],
  "extraDependencies": ["node_modules/@webcomponents/webcomponentsjs/**"],
  "builds": [
    {
      "name": "es5-bundled",
      "bundle": {
        "stripComments": "true",
        "inlineCss": "false",
        "sourcemaps": "true"
      },
      "js": {
        "compile": "es5",
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": {
          "exclude": [
            "/style/bulma-new-style/bulma.min.css"
          ]
        }
      },
      "autoBasePath":true,
      "addServiceWorker": true
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
